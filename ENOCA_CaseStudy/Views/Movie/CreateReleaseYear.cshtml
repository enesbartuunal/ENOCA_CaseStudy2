@model ENOCA_CaseStudy.Models.MovieDto
@{
    ViewData["Title"] = "CreateReleaseYear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateReleaseYear">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input asp-for="MovieID" class="form-control" type="hidden" />

            </div>
            <div class="form-group">
                <label asp-for="MovieName" class="control-label"></label>
                <input asp-for="MovieName" class="form-control" readonly="readonly" />
                <span asp-validation-for="MovieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductionYear" class="control-label"></label>
                <input asp-for="ProductionYear" class="form-control" readonly="readonly" />
                <span asp-validation-for="ProductionYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaloonNames" class="control-label"></label>
                <select name="saloonIds" class="form-control" aria-required="true">
                    @foreach (var faculty in (List<SaloonDto>)ViewData["SaloonList"])
                    {
                        <option value="@faculty.SaloonID" label="@faculty.SaloonName"></option>
                    }
                </select>
                <span asp-validation-for="SaloonNames" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Gösterim Tarihi:</label>
                <input name="releaseYear" class="form-control" type="number" />
            </div>
            <div class="form-group">
                <input type="submit" value="Ayarla" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }