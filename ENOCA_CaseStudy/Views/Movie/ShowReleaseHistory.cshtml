@model IEnumerable<ENOCA_CaseStudy.Models.ShowReleaseHistoryDto>

@{
    ViewData["Title"] = "ShowReleaseHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />

<div id="layoutSidenav_content">
    <main>
        <table id="example" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Film")
                    </th>
                    <th>
                        @Html.DisplayName("Gösterim Yılı")
                    </th>
                    <th>
                        @Html.DisplayName("Salon")
                    </th>

                </tr>
            </thead>
            @if (Model != null)
            {
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MovieName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReleaseYear)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SaloonName)
                            </td>
                        </tr>
                    }
                </tbody>
            }
            else
            {
                <tr>
                    <td>
                    </td>
                    <td>
                    </td>
                    <td>
                    </td>

                    <td>
                    </td>

                    <td>
                    </td>
                    <td>
                    </td>
                </tr>
            }
        </table>
    </main>
</div>
<hr />

<div>
    <a asp-action="Index">Geri Dön</a>
</div>

@section Scripts{
    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#example').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.22/i18n/Turkish.json"
                }
            });

        });
    </script>
  }